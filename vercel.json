{
  "version": 2,
  "installCommand": "npm install --prefix frontend --include=dev && npm install --prefix backend && npm install --prefix api",
  "buildCommand": "npm run build --prefix frontend",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "backend/**",
      "maxDuration": 30
    }
  }
}
